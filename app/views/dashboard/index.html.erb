<h2> Category Wise Products </h2>

<% data= {} %>

<% @categories.each do |category|
	data[category.name] = category.products.size
end %>

<%= pie_chart(data) %>

<%= column_chart(data) %>

<%#= scatter_chart City.pluck(:size, :population), xtitle: "Size", ytitle: "Population" %>

<%# bar_chart(data) %>

<script>
	$(document).ready(function(){
    $('#productsTable').DataTable();
});

</script>

<table id="productsTable">
  <thead>
    <tr>
    <th>Name</th>
      <th>Price</th>
      
    </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
  <tr>
  	<td><%=product.name %></td>
  	<td><%= product.price %></td>
  </tr>
  <%end%>
  </tbody>
  </table>